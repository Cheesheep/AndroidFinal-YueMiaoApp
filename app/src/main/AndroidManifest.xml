<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 允许查看网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 允许连接互联网 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/school_app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySchool"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".PersonPageActivity"
            android:exported="false" />
        <activity
            android:name=".VaccineCardActivity"
            android:exported="false" />
        <activity
            android:name=".UserInfoPageActivity"
            android:exported="false" />
        <activity
            android:name=".NewsArticleContentActivity"
            android:exported="false" /> <!-- 首页作为MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.SZU_PAGE" /> <!-- 登录页面作为主活动 -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.SZU_PAGE">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>