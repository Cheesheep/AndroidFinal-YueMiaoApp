<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="7dp"
        >
        <ImageView
            android:id="@+id/card_image"
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:background="@color/white"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:elevation="20dp"
        android:layout_marginLeft="4dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp">
            <!--滑动栏的头部，一些用户信息-->
            <!--头像框，cardView可以让头像设置圆角-->
            <androidx.cardview.widget.CardView
                android:id="@+id/img_item_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="20dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="60dp"
                >
                <!--用户头像-->
                <ImageView
                    android:id="@+id/icon_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/personal"
                    android:backgroundTint="@color/teal_700"
                    android:src="@drawable/personal" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:elevation="20dp"
                >
                <TextView
                    android:id="@+id/card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="ITEM"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/card_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="yyyy-mm-nn"
                    android:textSize="11sp"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="证件类型:  "
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:elevation="20dp"
                />
            <TextView
                android:id="@+id/card_id_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="CONTENT"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:elevation="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="证件号码:  "
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:elevation="20dp"
                />
            <TextView
                android:id="@+id/card_identify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="CONTENT"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:elevation="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="手机号码:  "
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:elevation="20dp"
                />
            <TextView
                android:id="@+id/card_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="NUMBER"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:elevation="20dp"
                />
        </LinearLayout>
        <!--文本要加上elevation是为了避免被cardview盖住-->
    </LinearLayout>

    <ImageView
        android:id="@+id/card_delete_inoculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top | right"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/delete_inoculate"
        android:backgroundTint="@color/gray"
        android:elevation="20dp"
        />
    <TextView
        android:id="@+id/card_bind_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center | end"
        android:layout_marginRight="15dp"
        android:text="已绑定"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:elevation="20dp"
        android:visibility="gone"
        />
</FrameLayout>