<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yuemiao_color3"
    tools:context=".personpage.inoculatepage.InoculateInfoPageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yuemiao_color3"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="编辑用户信息"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <!--头像框，cardView可以让头像设置圆角-->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="15dp"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/person_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                app:cardCornerRadius="60dp"
                >
                <!--用户头像-->
                <ImageView
                    android:id="@+id/person_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/personal"
                    android:backgroundTint="@color/colorPrimary"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yuemiao_color3_deeper"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="姓名"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="15dp"
            >
            <!--用户信息-->
            <EditText
                android:id="@+id/ino_edit_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:hint="请输入姓名"
                android:textColorHint="@color/gray"
                android:gravity="end"
                android:theme="@style/MyEditTextStyle"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yuemiao_color3_deeper"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="证件类型"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="15dp"
            >
            <!--用户信息-->
            <EditText
                android:id="@+id/ino_edit_id_type"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:hint="请输入证件类型"
                android:textColorHint="@color/gray"
                android:gravity="end"
                android:theme="@style/MyEditTextStyle"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yuemiao_color3_deeper"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="证件号码"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="15dp"
            >
            <!--用户信息-->
            <EditText
                android:id="@+id/ino_edit_identity"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:hint="请输入证件号码"
                android:textColorHint="@color/gray"
                android:gravity="end"
                android:theme="@style/MyEditTextStyle"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yuemiao_color3_deeper"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="生日"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="15dp"
            >
            <!--用户信息-->
            <EditText
                android:id="@+id/ino_edit_birth"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:hint="请输入生日"
                android:textColorHint="@color/gray"
                android:gravity="end"
                android:theme="@style/MyEditTextStyle"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yuemiao_color3_deeper"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="性别"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="15dp"
            >
            <!--用户信息-->
            <EditText
                android:id="@+id/ino_edit_sex"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:hint="请输入性别"
                android:textColorHint="@color/gray"
                android:gravity="end"
                android:theme="@style/MyEditTextStyle"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yuemiao_color3_deeper"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="电话号码"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="15dp"
            >
            <!--用户信息-->
            <EditText
                android:id="@+id/ino_edit_phone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:hint="请输入电话号码"
                android:textColorHint="@color/gray"
                android:gravity="end"
                android:theme="@style/MyEditTextStyle"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yuemiao_color3_deeper"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="所在地区"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="15dp"
            >
            <!--用户信息-->
            <EditText
                android:id="@+id/ino_edit_loc"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:hint="请输入所在地区"
                android:textColorHint="@color/gray"
                android:gravity="end"
                android:theme="@style/MyEditTextStyle"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yuemiao_color3_deeper"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="详细地址"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="15dp"
            >
            <!--用户信息-->
            <EditText
                android:id="@+id/ino_edit_detail_loc"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                android:hint="请输入详细地址"
                android:textColorHint="@color/gray"
                android:gravity="end"
                android:theme="@style/MyEditTextStyle"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/ino_add_sure_button"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:text="确  定"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />
</LinearLayout>