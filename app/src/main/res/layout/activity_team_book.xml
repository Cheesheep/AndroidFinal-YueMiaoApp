<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <FrameLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/yuemiao_color3">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/color_card07"
            android:scaleType="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="40dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginBottom="10dp"
                android:paddingVertical="10dp"
                android:id="@+id/shouzhongzhe"
                >
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/menu_student"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="查看团体报名记录"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <!--头像框，cardView可以让头像设置圆角-->
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end | center_vertical"
                    android:layout_marginRight="15dp"
                    >
                    <!--用户信息-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/right_arrow"
                        android:backgroundTint="@color/yuemiao_color3_deeper"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/update_inoculate"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    />
                <!--头像框，cardView可以让头像设置圆角-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start | center_vertical"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    >
                    <!--用户信息-->
                    <EditText
                        android:id="@+id/et_input"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:hint="手动输入团体码"
                        android:textColorHint="@color/gray"
                        android:theme="@style/MyEditTextStyle"
                        />
                </LinearLayout>
                <Button
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="加入"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="4"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/generate_qr_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="生成二维码（可长按保存）"/>
        </LinearLayout>
        <!--头像框，cardView可以让头像设置圆角-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                app:cardCornerRadius="80dp"
                >
                <!--用户头像-->
                <ImageView
                    android:id="@+id/btn_scanning"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/qr_scan" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_qr_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="bottom | center"
            android:layout_marginBottom="20dp"
            android:scaleType="fitXY" />
    </FrameLayout>

</RelativeLayout>